{
  "name": "angular-demo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "sass": "sass --load-path ./node_modules --load-path ./src/styles --load-path ./ --no-source-map",
    "sass:material": "npm run sass src/material.scss ./tmp/material.css",
    "sass:styles": "npm run sass src/styles.scss ./tmp/styles.css",
    "sass:color-mixin": "npm run sass src/styles/_color-mixin.scss ./tmp/color-mixin.css",
    "test": "ng test",
    "test:file": "ng test --test-path-pattern",
    "test:cov": "ng test --coverage",
    "test:watch": "ng test --clearCache && ng test --watch",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix"
  },
  "dependencies": {
    "@angular/animations": "21.2.0",
    "@angular/cdk": "21.2.0",
    "@angular/common": "21.2.0",
    "@angular/compiler": "21.2.0",
    "@angular/core": "21.2.0",
    "@angular/forms": "21.2.0",
    "@angular/material": "21.2.0",
    "@angular/platform-browser": "21.2.0",
    "@angular/platform-browser-dynamic": "21.2.0",
    "@angular/router": "21.2.0",
    "@bjanderson/utils": "3.1.0",
    "@fortawesome/fontawesome-free": "6.6.0",
    "luxon": "3.7.2",
    "ngx-toastr": "19.0.0",
    "rxjs": "7.8.2",
    "tslib": "2.3.0",
    "uuid": "9.0.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-builders/jest": "20.0.0",
    "@angular/build": "^21.2.0",
    "@angular/cli": "21.2.0",
    "@angular/compiler-cli": "21.2.0",
    "@types/jest": "29.5.12",
    "@types/luxon": "3.7.1",
    "@types/uuid": "9.0.8",
    "angular-eslint": "19.8.1",
    "eslint": "9.30.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-unused-imports": "4.2.0",
    "glob": "11.0.3",
    "jasmine-spec-reporter": "7.0.0",
    "jest": "29.7.0",
    "jest-cli": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-jasmine2": "30.2.0",
    "jest-preset-angular": "14.6.1",
    "jsdom": "27.0.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1"
  }
}
